FROM node:8-alpine

RUN mkdir /frontend

COPY ./package.json ./package-lock.json /frontend/

WORKDIR /frontend

RUN npm install

COPY ./webpack.config.js ./member.webpack.config.js /frontend/

COPY  ./src/ /frontend/src

COPY  ./dist/ /frontend/dist

EXPOSE 8080
EXPOSE 8081

ENV DEVELOPMENT=1

CMD ["npm", "start"]
